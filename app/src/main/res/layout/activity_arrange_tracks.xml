<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/arrangeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/emptyListHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“­ No tracks in this folder"
        android:textSize="18sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center"
        android:visibility="gone" />
    <!-- Obere Button-Leiste -->
    <LinearLayout
        android:id="@+id/sortButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSortAlphabetic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ABC"
            android:background="@drawable/button_gradient_selector"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonSortByDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATE"
            android:background="@drawable/button_gradient_selector"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonSortChaotic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CHAOS"
            android:background="@drawable/button_gradient_selector"
            android:textColor="#000000" />
        <Button
            android:id="@+id/buttonCustom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CUSTOM"
            android:background="@drawable/button_gradient_selector"
            android:textColor="#000000" />

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="X"
            android:background="@drawable/button_gradient_selector"
            android:textColor="#000000" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortButtonsLayout">

        <!-- Scrollbereich -->
        <HorizontalScrollView
            android:id="@+id/horizontalScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <ScrollView
                android:id="@+id/verticalScroll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/trackListLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="60dp" />
            </ScrollView>
        </HorizontalScrollView>

        <!-- Rechte Pfeiltasten Ã¼berlagern Scrollbereich -->
        <LinearLayout
            android:id="@+id/arrowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end|top"
            android:layout_marginTop="120dp"
            android:background="@android:color/transparent">

            <Button
                android:id="@+id/buttonMoveUp"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:background="@drawable/button_gradient_selector_vertikal"
                android:text="â–²"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonMoveDown"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:background="@drawable/button_gradient_selector_vertikal"
                android:text="â–¼"
                android:textColor="#000000" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
